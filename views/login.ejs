<%- include('./header.ejs') %>
<section style="background-color: rgb(246, 174, 172);"
class="login-wrap mtb-40" >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; color: rgb(228, 22, 22); font-size: x-large;">Adminstrator Login</h1>
                    <%if(message.length > 0){ %>
                        <div class="alert alert-success">
                            <%=message %>
                        </div>
                    <% }%>
                    <form action="/verifylogin" method="post">
                        <div class="form-group">
                            <input type="text" name="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                           <button class="btn btn-danger">Login</button>
                        </div>
                        <div class="form-group">
                            <a href="/register" class="btn btn-success">Register</a>
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>

<%- include('./footer.ejs') %>