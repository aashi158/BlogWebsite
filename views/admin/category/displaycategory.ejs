<%- include('../../header.ejs') %>
<section class="dashboard-wrap mtb-40">
  <div class="container">
      <div class="body-content">
          <div class="row">
            <div class="col-md-3">
                <div class="dash-left" style="background-color: #4c94f8;
                    margin-bottom: 5px;">
                    <ul style="outline-style: inherit;">
                        <li class="active"><a href="/admin/dashboard">DASHBOARD</a></li>
                        <li><a href="/admin/createblog">CREATE BLOGS</a></li>
                        <li><a href="/admin/displayblog">DISPLAY BLOGS</a></li>
                        <li><a href="/admin/category/createcategory">CREATE CATEGORY</a></li>
                        <li><a href="/admin/category/displaycategory">DISPLAY CATEGORY</a></li>
                        <!-- <li><a href="/curd/create">CREATE CURD</a></li>
                        <li><a href="/curd/display">DISPLAY CURD</a></li> -->
                        <li><a href="/admin/contact">CREATE CONTACT</a></li>
                        <li><a href="/admin/displaycontact">DISPLAY CONTACTS</a></li>
                        <li><a href="/about">ABOUT</a></li>
                        <li><a href="/logout">LOGOUT</a></li>
                    </ul>
                </div>   
            </div>
              <div class="col-md-9">
                  <div class="dash-right">
                      <div class="dash-header">
                          <div class="dash-title">
                              <h1 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; color: rgb(41, 80, 210); font-size: xx-large;">Display Category</h1>
                          </div>
                          <div class="dash-nav">
                              <a href="/admin/createcategory" class="btn btn-success">Add Category</a>
                          </div>
                      </div>
                      <table class="table table-bordered table-striped">
                          <tr>
                              <th>sno.</th>
                              <th>Name</th>
                              <th>Action</th>
                          </tr>
                        <tr>
                            <% var i=1 %>
                            <% data.forEach((item)=>{ %>       
                                <tr>
                                    <td><%= i++ %></td>
                                    <td><%= item.catname %></td>
                                    <td>
                                        <a href="/viewcategory/<%=item._id%>" class="btn btn-info">VIEW</a>
                                        <a href="/editcategory/<%=item._id%>" class="btn btn-success">EDIT</a>
                                        <a href="/deletecategory/<%=item._id%>" class="btn btn-danger">DELETE</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tr>
                         
                      </table>
                  </div>   
              </div>
          </div>
      </div>
  </div>
</section>

<%- include('../../footer.ejs') %>