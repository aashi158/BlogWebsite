<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40">
  <div class="container">
      <div class="body-content">
          <div class="row">
            <div class="col-md-3">
                <div class="dash-left" style="background-color: #4c94f8;
                    margin-bottom: 5px;">
                    <ul style="outline-style: inherit;">
                        <li class="active"><a href="/admin/dashboard">DASHBOARD</a></li>
                        <li><a href="/admin/createblog">CREATE BLOGS</a></li>
                        <li><a href="/admin/displayblog">DISPLAY BLOGS</a></li>
                        <li><a href="/admin/category/createcategory">CREATE CATEGORY</a></li>
                        <li><a href="/admin/category/displaycategory">DISPLAY CATEGORY</a></li>
                        <!-- <li><a href="/curd/create">CREATE CURD</a></li>
                        <li><a href="/curd/display">DISPLAY CURD</a></li> -->
                        <li><a href="/admin/contact">CREATE CONTACT</a></li>
                        <li><a href="/admin/displaycontact">DISPLAY CONTACTS</a></li>
                        <li><a href="/about">ABOUT</a></li>
                        <li><a href="/logout">LOGOUT</a></li>
                    </ul>
                </div>   
            </div>
              <div class="col-md-9">
                  <div class="dash-right">
                      <div class="dash-header">
                          <div class="dash-title">
                              <h1 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; color: rgb(41, 80, 210); font-size: xx-large;">BLOGS</h1>
                          </div>
                          <div class="dash-nav">
                              <a href="/admin/displayblog" class="btn btn-success">Add Post</a>
                          </div>
                      </div>
                      <table class="table table-bordered table-striped">
                          <tr>
                              <th>SNo.</th>
                             
                              <th>Title</th>
                              <th>Description</th>
                              <th>image</th>
                              <th>Action</th>
                          </tr>
                          <td><% var i=1 %></td>
                          <% data.forEach((item)=>{ %>    <!-- FOR EACH LOOP -->
                              <!-- console.log(item) -->
                              <tr>
                                  <td><%= i++ %></td>
                                  <td><%= item.title %></td>
                                  <td><%= item.description %></td>
                                  <td><img src="/upload/<%= item.image %>" alt="" width="50px" height="100px"></td>
                                  <td>
                                      <a href="/admin/viewblog/<%=item._id%>" class="btn btn-info">VIEW</a>
                                      <a href="/admin/editblog/<%=item._id%>" class="btn btn-success">EDIT</a>
                                      <a href="/admin/deleteblog/<%=item._id%>" class="btn btn-danger">DELETE</a>
                                  </td>
                              </tr>
                          <% }) %>
                         
                      </table>
                  </div>   
              </div>
          </div>
      </div>
  </div>
</section>


<%- include('../../footer.ejs') %>