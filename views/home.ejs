<%- include('./header.ejs') %>
<section class="banner">
    <div class="banner-box">
        <div class="intro-text">
            <div class="intro-text-box">
                <h1>BLOGS</h1>
                <B><p>Improbable Research is all about making people laugh, and then think</p></B>
            </div>
        </div>
        <img src="https://img.freepik.com/premium-photo/mock-up-smart-phone-with-blank-screen-laptop-computer-notebook-coffee-cup-dark-stone-background-flat-lay_35674-15380.jpg?size=626&ext=jpg" width="450px" height="450px" alt="error loading img" />
    </div>
</section>
<section class="featured-blog mtb-40">
    <div class="container">
        <div class="row">
            <% data.forEach((item)=>{ %>
                <div class="col-md-4">
                    <div class="blog-box shadow-lg p-3 mb-5 background-white rounded">
                        <img src="/upload/<%= item.image %>" width="200px" height="150px" alt="blog1" />
                        <h3><%= item.title %></h3>
                        <p><%= item.description.slice(0, 90) %></p> 
                           <!-- words ko less dikhane keliye -->
                        <p><%= item.createdAt.toLocaleDateString() %></p>
                        <!-- time ko show krna -->
                        <a href="/detail/<%= item._id %>" class="btn btn-danger">Read more...</a>
                    </div>
                </div>
                <% }) %>
           
            
        </div>
    </div>
</section>

<%- include('./footer.ejs') %>


